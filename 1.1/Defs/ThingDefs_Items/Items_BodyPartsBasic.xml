   <!-- Added body parts -->

   <ThingDef ParentName="Basic">
      <defName>IronArm</defName>
      <label>iron arm</label>
      <description>A highly ineffective replacement for a missing arm.</description>
      <costList>
         <Steel>50</Steel>
      </costList>
      <statBases>
         <Mass>2</Mass>
      </statBases>
   </ThingDef>
   
    <ThingDef ParentName="Basic">
      <defName>ProstheticHook</defName>
